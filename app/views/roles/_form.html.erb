<%= form_for @role, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :iii_role_category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :iii_role_category_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_disabled_during_read_only_access, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :is_disabled_during_read_only_access, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                role_path, :class => 'btn' %>
  </div>
<% end %>
